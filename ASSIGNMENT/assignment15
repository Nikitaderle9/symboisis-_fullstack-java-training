//ASSIGNMENT 15
//create an array of objects and displays the data using a for loop:
public class Student {
	String name;
    int age;
    String course;
    public Student(String name, int age, String course) {
        this.name = name;
        this.age = age;
        this.course = course;
	}
    public static void main(String[] args) {
     //array of Student objects
        Student[] students = new Student[3];
        students[0] = new Student("John", 20, "Computer Science");
        students[1] = new Student("Alice", 22, "Commerce");
        students[2] = new Student("Bob", 21, "Engineering");

    // Display data using a for loop
        for (int i=0;i<3;i++) {
            System.out.println("Name: " + students[i].name);
            System.out.println("Age: " + students[i].age);
            System.out.println("Course: " + students[i].course);
            System.out.println("------------------------");
        }
    }
}
